<html>
  <head>
    <title>AnonX - Register</title>
    <link rel="stylesheet" type="text/css" media="all" href="/public/assets/style.css" />
    <link rel="shortcut icon" type="image/x-icon" href="/public/assets/images/favicon.ico" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="container">
      <h1 class="header">Create Your Account</h1>
      <div class="login-content">
        <form action="/createAccount" method="post">
          <div class="input-div one">
            <div class="i">
              <i class="fas fa-user"></i>
            </div>
            <div class="div">
              <input
                type="text"
                class="input"
                placeholder="Username"
                name="username"
                required
              />
            </div>
          </div>
          <div class="input-div password">
            <div class="i">
              <i class="fas fa-lock"></i>
            </div>
            <div class="div">
              <input
                type="password"
                class="input"
                placeholder="Password"
                name="password"
                required
              />
            </div>
          </div>
          <input type="submit" class="btn" value="Create Account" />
        </form>
      </div>
    </div>
    <script src="script.js"></script>
  </body>
</html>
